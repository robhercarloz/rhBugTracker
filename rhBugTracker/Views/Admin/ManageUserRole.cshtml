@model rhBugTracker.Models.UserInformationDisplay
@{ 
    ViewBag.Title = "ManageUserRole";
}


<div class="content">

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            @Html.Hidden("UserIds")
                            <div class="col-lg-4">
                                <label>NAME: </label>
                                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", @disabled = true })
                                <label>Displayname:</label>
                                @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control", @disabled = true })
                                <label>Email:</label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @disabled = true })
                                <label>Current Role:</label>
                                @Html.TextBoxFor(m => m.Role, new { @class = "form-control", @disabled = true })
                            </div>

                            <div class="col-lg-4">
                                <p>Select a role for the user below.</p>
                                @Html.DropDownList("Role", null, "-- Select Role -- ", new { @class = "form-control" })
                            </div>

                            <div class="col-lg-4">
                                <button class="btn btn-primary btn-lg" type="submit">Assign</button>
                            </div>
                            
                        </div>
                    }
                </div>
                
            </div>
        </div>
    </div>



</div>