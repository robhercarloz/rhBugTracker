@model IEnumerable<rhBugTracker.Models.UserProjectListViewModel>

@{ 
    ViewBag.Title = "Manage Project Users";
}


<h2>@ViewBag.Title</h2>

<div class="container">

    <div class="row">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            //List box to display the projects
            <div class="col-md-12">
                @Html.ListBox("Projects", null, new { @class = "form-control"})
            </div>
            //Submit button when clicked assigns roles
            <div class="col-md-2 col-md-offset-1">
                <button type="submit" class="btn btn-primary btn-large">Assign</button>
            </div>
            //
            <div class="col-md-4">
                @if (User.IsInRole("Admin"))
                {
                    <div class="row">
                        <div class="col-md-12">
                            <h3>Project Manager</h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            @Html.DropDownList("ProjectManagerId", null, "--Select--", new { @class = "form-control"})
                        </div>
                    </div>
                    <hr/>
                }
                <div class="row">
                    <div class="col-md-12">
                        <h3>Developers</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        @Html.ListBox("Developers", null, new { @class = "form-control"})
                    </div>
                </div>
                <hr />

                <div class="row">
                    <div class="col-md-12">
                        <h3>Submitters</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        @Html.ListBox("Submitters", null, new { @new = "form-control"})
                    </div>
                </div>
            </div>                 
        }
    </div>
    Displaying users with and their assigned projects
    <div class="row">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m.Name)
                </th>
                <th>
                    @Html.DisplayName("Projects")
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @foreach(var name in item.ProjectNames)
                        {
                            @name <br />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
