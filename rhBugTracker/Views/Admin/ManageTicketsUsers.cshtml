@model IEnumerable<rhBugTracker.Models.UserTicketListViewModel>

@{ 
    ViewBag.Title = "Manage Tickets Users";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ManageTicketsUsers</title>
</head>
<body>
    <div class="col-lg-12">
        <div class="row">
            <div class="col-md-12 ">
                <div class="card">
                    <h2 style="text-align: center">Assign Ticket to users </h2>
                    <div class="row">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken();
                            <h4>Choose Ticket</h4>
                            @Html.DropDownList("Tickets", null, "--SELECT--", new { @class = "form-control"})
                            <br />
                            <h4>Choose Developer</h4>
                            @Html.DropDownList("DeveloperId",null, "--SELECT--", new { @class =  "form-control"})
                            <br />
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-large" id="btnSubmit">Assign</button>
                            </div>

                        }
                        </div>

                </div>
            </div>
        </div>
    </div>

</body>
</html>
