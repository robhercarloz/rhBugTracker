@using rhBugTracker.Helpers;
@using Microsoft.AspNet.Identity;

@model rhBugTracker.Models.Dashboard

@{ 
    var userId = User.Identity.GetUserId();
    var projHelper = new ProjectHelper();



}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    
    <div class="col-12 mt-3">
        <div class="card">
            <div class="card-body">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-md-3 ">
                            <div class="card">
                                <div class="seo-fact sbg1">
                                    <div class="p-4 d-flex justify-content-between align-items-center">
                                        <div class="seofct-icon"><i class="ti-ticket"></i>My Tickets</div>
                                        

                                    </div>
                                    @*<canvas id="seolinechart1" height="50"></canvas>*@
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 ">
                            <div class="card">
                                <div class="seo-fact sbg1">
                                    <div class="p-4 d-flex justify-content-between align-items-center">
                                        <div class="seofct-icon"><i class="ti-blackboard"></i>My Projects</div>
                                        <h2></h2>
                                    </div>
                                    @*<canvas id="seolinechart1" height="50"></canvas>*@
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 ">
                            <div class="card">
                                <div class="seo-fact sbg1">
                                    <div class="p-4 d-flex justify-content-between align-items-center">
                                        <a href=@Url.Action("Index","Projects")><div class="seofct-icon"><i class="ti-file"></i>All Projects</div></a>
                                        @if (Model.myProjects.Count() == 0)
                                        {
                                            <h2>0</h2>
                                        }
                                        else
                                        {
                                            <h2>@Model.myProjects.Count()</h2>
                                        }
                                    </div>
                                    @*<canvas id="seolinechart1" height="50"></canvas>*@
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 ">
                            <div class="card">
                                <div class="seo-fact sbg1">
                                    <div class="p-4 d-flex justify-content-between align-items-center">
                                        <div class="seofct-icon"><i class="ti-file"></i>My Team</div>
                                        <h2></h2>
                                    </div>
                                    @*<canvas id="seolinechart1" height="50"></canvas>*@
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <!-- seo fact area end -->

            </div>
        </div>
    </div>
                
</body>
</html>
