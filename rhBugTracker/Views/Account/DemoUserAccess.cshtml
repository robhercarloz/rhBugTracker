@using rhBugTracker.Models


@{
    ViewBag.Title = "Demo User";
    Layout = null;
}
    <html>
    <head>
        <meta charset="utf-8" />
        <link rel="apple-touch-icon" sizes="76x76" href="../../assets/img/apple-icon.png">
        <link rel="icon" type="image/png" href="../../assets/img/favicon.png">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <title>
            RH Bugtracker
        </title>
        <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
        <!--     Fonts and icons     -->
        <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
        <!-- CSS Files -->
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <link href="~/Content/paper-dashboard.min.css" rel="stylesheet" />
        <!-- CSS Just for demo purpose, don't include it in your project -->
        <link href="~/Content/demo.css" rel="stylesheet" />
        
        <style>

            body{
                background-color: floralwhite;
            }

            #desSize{
                padding: 25px;
            }
            

        </style>

    </head>
    <body>
        <div class="content">
            <div class="col-lg-12 mt-4" style="padding-bottom: 20px">
                <div class="row">
                    <div class="col-md-3">
                        <div class="card card-user">
                            <div class="image image-plain"></div>
                            <div class="content">
                                <div class="author">
                                    <a href="#">
                                        <img class="avatar" src="~/Avatars/adminAvatar.png" alt="..." />
                                        <h4 class="title">
                                            <small>Admin</small>
                                        </h4>
                                    </a>
                                </div>
                                <p class="description text-center" id="desSize">
                                    Admins have the ablitiy to do about everything but create
                                    a ticket.
                                </p>
                            </div>
                            @using (Html.BeginForm("DemoUserAccess", "Account", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("emailKey", "DemoAdminEmail")
                                <div class="footer text-center">
                                    <button type="submit" class="btn btn-info btn-round btn-wd"> Login</button>
                                </div>
                            }
                        </div> <!-- end card -->
                    </div>
                    <div class="col-md-3">
                        <div class="card card-user">
                            <div class="image image-plain"></div>
                            <div class="content">
                                <div class="author">
                                    <a href="#">
                                        <img class="avatar" src="~/Avatars/pmAvatar.png" alt="..." />
                                        <h4 class="title">
                                            <small>Project Manager</small>
                                        </h4>
                                    </a>
                                </div>
                                <p class="description text-center" id="desSize">
                                    Project Managers can manage projects they are on and tickets they are on.
                                </p>
                            </div>
                            @using (Html.BeginForm("DemoUserAccess", "Account", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("emailKey", "DemoPMEmail")
                                <div class="footer text-center">
                                    <button type="submit" class="btn btn-info btn-round btn-wd">Login</button>
                                </div>
                            }
                        </div> <!-- end card -->
                    </div>
                    <div class="col-md-3">
                        <div class="card card-user">
                            <div class="image image-plain"></div>
                            <div class="content">
                                <div class="author">
                                    <a href="#">
                                        <img class="avatar" src="~/Avatars/developerAvatar.png" alt="..." />
                                        <h4 class="title">
                                            <small>Developer</small>
                                        </h4>
                                    </a>
                                </div>
                                <p class="description text-center" id="desSize">
                                    Developer will be able to see their tickets and projects they are on. They are responsible for fixing bugs given to them.
                                </p>
                            </div>
                            @using (Html.BeginForm("DemoUserAccess", "Account", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("emailKey", "DemoDeveloperEmail")
                                <div class="footer text-center">
                                    <button type="submit" class="btn btn-info btn-round btn-wd">Login</button>
                                </div>
                            }
                        </div> <!-- end card -->
                    </div>
                    <div class="col-md-3">
                        <div class="card card-user">
                            <div class="image image-plain"></div>
                            <div class="content">
                                <div class="author">
                                    <a href="#">
                                        <img class="avatar" src="~/Avatars/submitterAvatar.png" alt="..." />
                                        <h4 class="title">
                                            <small>Submitter</small>
                                        </h4>
                                    </a>
                                </div>
                                <p class="description text-center" id="desSize">
                                    Submitters can be assigned to projects and are the only ones that can create tickets.
                                </p>
                            </div>
                            @using (Html.BeginForm("DemoUserAccess", "Account", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("emailKey", "DemoSubmitterEmail")
                                <div class="footer text-center">
                                    <button type="submit" class="btn btn-info btn-round btn-wd">Login</button>
                                </div>
                            }
                        </div> <!-- end card -->
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <h3 style="text-align: center">BUGTRACKER</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
    </html>