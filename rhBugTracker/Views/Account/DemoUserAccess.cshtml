@using rhBugTracker.Models


@{
    ViewBag.Title = "Demo User";
    Layout = null;
}
    <html>
    <head>
        <meta charset="utf-8" />
        <link rel="apple-touch-icon" sizes="76x76" href="../../assets/img/apple-icon.png">
        <link rel="icon" type="image/png" href="../../assets/img/favicon.png">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <title>
            RH Bugtracker
        </title>
        <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
        <!--     Fonts and icons     -->
        <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
        <!-- CSS Files -->
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <link href="~/Content/paper-dashboard.min.css" rel="stylesheet" />
        <!-- CSS Just for demo purpose, don't include it in your project -->
        <link href="~/Content/demo.css" rel="stylesheet" />
        
        <style>

            body{
                background-color: floralwhite;
            }

            #desSize{
                padding: 25px;
            }
            

        </style>

    </head>
    <body>
        <div class="content">
            <div class="col-lg-12" style="text-align: center">
                <div class="row" style="margin-top: 20px">
                    <div class="card-deck"  style="margin-left: auto; margin-right: auto;">
                        <!--Admin-->
                        <div class="col-md-3">
                            <div class="card card-user">
                                <div class="image image-plain"></div>
                                <div class="content">
                                    <div class="author">
                                        <img src="~/Avatars/adminAvatar.png" class="avatar" />                                        
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            Admin
                                        </h5>
                                        <label>
                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item">Are able to assign/unassign people to projects, roles, and tickets.</li>
                                                <li class="list-group-item">Can create projects.</li>
                                                <li class="list-group-item">Oversee all projects in progress.</li>
                                            </ul>
                                        </label>
                                    </div>
                                    <div class="card-footer">
                                        @using (Html.BeginForm("DemoUserAccess", "Account", FormMethod.Post))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.Hidden("emailKey", "DemoAdminEmail")
                                            <button type="submit" class="btn btn-info btn-round btn-wd"> Login</button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>                        
                        <!--Project Manager-->
                        <div class="col-md-3">
                            <div class="card card-user">
                                <div class="image image-plain"></div>
                                <div class="content">
                                    <div class="author">
                                        <img src="~/Avatars/pmAvatar.png" class="avatar" />
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            Project Manager
                                        </h5>
                                        <label>
                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item">Can manage the project team they are assigned to.</li>
                                                <li class="list-group-item">Can edit projects and tickets they are assigned to.</li> 
                                            </ul>
                                        </label>
                                    </div>
                                    <div class="card-footer">
                                        @using (Html.BeginForm("DemoUserAccess", "Account", FormMethod.Post))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.Hidden("emailKey", "DemoPMEmail")
                                            <button type="submit" class="btn btn-info btn-round btn-wd"> Login</button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>                        
                        <!--Developer-->
                        <div class="col-md-3">
                            <div class="card card-user">
                                <div class="image image-plain"></div>
                                <div class="content">
                                    <div class="author">
                                        <img src="~/Avatars/developerAvatar.png" class="avatar" />
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            Developer
                                        </h5>
                                        <label>
                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item">Developer will be able to see their tickets and projects they are on.</li>
                                                <li class="list-group-item">They are responsible for fixing bugs given to them.</li>
                                            </ul>
                                        </label>
                                    </div>
                                    <div class="card-footer">
                                        @using (Html.BeginForm("DemoUserAccess", "Account", FormMethod.Post))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.Hidden("emailKey", "DemoDeveloperEmail")
                                            <button type="submit" class="btn btn-info btn-round btn-wd"> Login</button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>                        
                        <!--Submitter-->
                        <div class="col-md-3">
                            <div class="card card-user">
                                <div class="image image-plain"></div>
                                <div class="content">
                                    <div class="author">
                                        <img src="~/Avatars/submitterAvatar.png" class="avatar" />
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            Submitter
                                        </h5>
                                        <label>
                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item">Submitters can be assigned to projects and are the only ones that can create tickets.</li>
                                            </ul>

                                        </label>
                                    </div>
                                    <div class="card-footer">
                                        @using (Html.BeginForm("DemoUserAccess", "Account", FormMethod.Post))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.Hidden("emailKey", "DemoSubmitterEmail")
                                            <button type="submit" class="btn btn-info btn-round btn-wd"> Login</button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>                        
                    </div>
                </div>
                <!--INFO-->
                <div class="row">
                    <div class="col-md-12 mt-3">
                        <div class="card">
                            <div class="card-body">
                                <h3 style="text-align: center">BUGTRACKER</h3>
                                <p>
                                The Bug Tracker is a Web-based software application designed to mirror any of a wide variety of bug tracking software systems in use by corporations throughout world.
                                If a company develops software, whether for in-house use or distribution, 
                                it uses a bug tracking system to maintain an accurate record of the software development process on a per-project basis. 
                                </p>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
    </html>