@model rhBugTracker.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
@{
    Layout = null;
}

<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Sign up - srtdash</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/png" href="assets/images/icon/favicon.ico">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/themify-icons.css">
    <link rel="stylesheet" href="~/Content/metisMenu.css">
    <link rel="stylesheet" href="~/Content/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/slicknav.min.css">
    <!-- amchart css -->
    <link rel="stylesheet" href="https://www.amcharts.com/lib/3/plugins/export/export.css" type="text/css" media="all" />
    <!-- others css -->
    <link rel="stylesheet" href="~/Content/typography.css">
    <link rel="stylesheet" href="~/Content/default-css.css">
    <link rel="stylesheet" href="~/Content/styles.css">
    <link rel="stylesheet" href="~/Content/responsive.css">
    <!-- modernizr css -->
    <script src="~/Scripts/modernizr-2.8.3.min.js"></script>
</head>

<body>
    <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->

    <!-- preloader area start -->
    <div id="preloader">
        <div class="loader"></div>
    </div>
    <!-- preloader area end -->

    <!-- login area start -->
    <div class="login-area login-bg">
        <div class="container">
            <div class="login-box ptb--100">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="login-form-head">
                        <h4>Sign up</h4>
                        <p>Hello there, thank you for showing interest in improving our software,</p>
                        <p>Sign up below !</p>
                    </div>
                    <div class="login-form-body">
                        <div class="form-gp">
                            @*<label for="exampleInputName1">Full Name</label>*@
                            @Html.Label("exampleInputName1", "Full Name")
                            @*<input type="text" id="exampleInputName1">*@
                            @Html.TextBoxFor(m => m.Name, new { id = "exampleInputName1"})
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger"})
                            <i class="ti-user"></i>
                        </div>
                    <div class="form-gp">
                        @*<label for="exampleInputEmail1">Email address</label>*@
                        @Html.Label("exampleInputEmail1", "Email Address")
                        @*<input type="email" id="exampleInputEmail1">*@
                        @Html.TextBoxFor(m => m.Email, new { id = "exampleInputName1"})
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger"})
                        <i class="ti-email"></i>
                    </div>
                    <div class="form-gp">
                        @*<label for="exampleInputPassword1">Password</label>*@
                        @Html.Label("exampleInputPassword1", "Password")
                        @*<input type="password" id="exampleInputPassword1">*@
                        @Html.TextBoxFor(m => m.Password, new { id = "exampleInputPassword1"})
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger"})
                        <i class="ti-lock"></i>
                    </div>
                    <div class="form-gp">
                        @*<label for="exampleInputPassword2">Confirm Password</label>*@
                        @Html.Label("exampleInputPassword2", "Confirm Password")
                        @*<input type="password" id="exampleInputPassword2">*@
                        @Html.TextBoxFor(m => m.ConfirmPassword, new { id = "exampleInputPassword2"})
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger"})
                        <i class="ti-lock"></i>
                    </div>
                    <div class="submit-btn-area">
                        <button id="form_submit" type="submit">Submit <i class="ti-arrow-right"></i></button>
                            @*<div class="login-other row mt-4">
                                <div class="col-6">
                                    <a class="fb-login" href="#">Sign up with <i class="fa fa-facebook"></i></a>
                                </div>
                                <div class="col-6">
                                    <a class="google-login" href="#">Sign up with <i class="fa fa-google"></i></a>
                                </div>
                            </div>*@
                    </div>
                    <div class="form-footer text-center mt-5">
                        <p class="text-muted">Don't have an account? 
                            @Html.ActionLink("Log In", "Login", "Account")
                        </p>
                    </div>
                 </div>
                }
            </div>
        </div>
    </div>
    <!-- login area end -->

    <!-- jquery latest version -->
    <script src="~/Scripts/jquery-2.2.4.min.js"></script>
    <!-- bootstrap 4 js -->
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/owl.carousel.min.js"></script>
    <script src="~/Scripts/metisMenu.min.js"></script>
    <script src="~/Scripts/jquery.slimscroll.min.js"></script>
    <script src="~/Scripts/jquery.slicknav.min.js"></script>

    <!-- others plugins -->
    <script src="~/Scripts/plugins.js"></script>
    <script src="~/Scripts/scripts.js"></script>
</body>

</html>




