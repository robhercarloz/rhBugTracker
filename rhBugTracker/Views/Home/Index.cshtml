@model rhBugTracker.Models.Dashboard
@using Microsoft.AspNet.Identity
@using rhBugTracker.Helpers

@{
    ViewBag.Title = "Home Page";
    var userId = User.Identity.GetUserId();
    var ticketHelper = new TicketHelper();
    var projectHelper = new ProjectHelper();
    

    }

<!--SUBMITTER DASHBOARD-->
    
<!---------------MAIN CONTENT ----------------------->
<div class="container" style="padding: 10px 10px 10px 10px">    
    <div class="main-content-inner">
        <div class="row">
            <!-- seo fact area start -->
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-md-4 ">
                        <div class="card">
                            <div class="seo-fact sbg1">
                                <div class="p-4 d-flex justify-content-between align-items-center">
                                    <a href="@Url.Action("myTickets", "Tickets")"><div class="seofct-icon"><i class="ti-ticket"></i>My Tickets</div></a>
                                    @if (ticketHelper.ListUserTickets(userId).Count() == 0)
                                    {
                                        <h2>0</h2>
                                    }
                                    else
                                    {
                                        <h2>@ticketHelper.ListUserTickets(userId).Count();</h2>
                                    }

                                </div>
                                @*<canvas id="seolinechart1" height="50"></canvas>*@
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 ">
                        <div class="card">
                            <div class="seo-fact sbg1">
                                <div class="p-4 d-flex justify-content-between align-items-center">
                                    <a href="@Url.Action("myProjects", "Projects")"><div class="seofct-icon"><i class="ti-blackboard"></i>My Projects</div></a>
                                    @if (projectHelper.ListUserProjects(userId).Count() == 0)
                                    {
                                        <h2>0</h2>
                                    }
                                    else
                                    {
                                        <h2>@projectHelper.ListUserProjects(userId).Count()</h2>
                                    }
                                </div>
                                @*<canvas id="seolinechart1" height="50"></canvas>*@
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 ">
                        <div class="card">
                            <div class="seo-fact sbg1">
                                <div class="p-4 d-flex justify-content-between align-items-center">
                                    <a href="@Url.Action("Create", "Tickets")"><div class="seofct-icon"><i class="ti-file"></i>Create Ticket</div></a>
                                </div>
                                @*<canvas id="seolinechart1" height="50"></canvas>*@
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <!-- seo fact area end -->
        </div>
    </div>
</div>
