@using rhBugTracker.Helpers;
@model IEnumerable<rhBugTracker.Models.Project>

@{
    ViewBag.Title = "Index";
    var ticketHelper = new TicketHelper();
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">ALL PROJECTS</h4>
                </div>
                <div class="card-body">
                    <div class="toolbar">
                        <!--        Here you can write extra buttons/actions for the toolbar              -->
                    </div>
                    <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Project Name</th>
                                <th>Description</th>
                                <th>Created On</th>
                                <th>Ticket Count</th>
                                <th>Project Team</th>
                                <th>DETAILS</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>PROJECT NAME</th>
                                <th>DESCRIPTION</th>
                                <th>CREATED ON</th>
                                <th>TICKET COUNT</th>
                                <th>PROJECT TEAM</th>
                                <th>DETAILS</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var users in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m => users.Name)</td>
                                    <td>@Html.DisplayFor(m => users.Description)</td>
                                    <td>@Html.DisplayFor(m => users.Created)</td>
                                    <td>@ticketHelper.ListProjectTickets(users.Id).Count()</td>
                                    <td>
                                        @foreach (var user in users.Users)
                                        {
                                            @user.FName @user.LName <br>
                                        }
                                    </td>
                                    <td>@Html.ActionLink("Details", "Details", new { id = users.Id})</td>
                                    @*<td>@Html.ActionLink("Details", "Details", new { id = })</td>*@
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- end content-->
            </div>
            <!--  end card  -->
        </div>
        <!-- end col-md-12 -->
    </div>
    <!-- end row -->
</div>

@section scripts{
    <script>
        $('#datatable').DataTable();
    </script>
}

