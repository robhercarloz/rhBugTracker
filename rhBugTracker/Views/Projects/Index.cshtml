@model IEnumerable<rhBugTracker.Models.Project>

@{
    ViewBag.Title = "Index";
}

<h2>LIST OF PROJECTS</h2>

<!-- Dark table start -->
<div class="col-12 mt-5">
    <div class="card">
        <div class="card-body">
            <h4 class="header-title">Projects</h4>
            <div class="data-tables datatable-dark">
                <table id="dataTable3" class="text-center">
                    <thead class="text-capitalize">
                        <tr>
                            <th>Project Name</th>
                            <th>Project Description</th>
                            <th>Project Created On</th>
                            <th>Project Ticket Count</th>
                            <th>Users On Project</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var users in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => users.Name)</td>
                                <td>@Html.DisplayFor(m => users.Description)</td>
                                <td>@Html.DisplayFor(m => users.Created)</td>
                                <td>@Html.DisplayFor(m => users.Tickets)</td>
                                <td></td>
                                <td></td>
                            </tr>
                        }
                    </tbody>


                    
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Dark table end -->





















