@model  rhBugTracker.Models.Project
@using rhBugTracker.Models
@using rhBugTracker.Helpers


@{
    ViewBag.Title = "Details";
    var ticketHelper = new TicketHelper();
    var proHelper = new ProjectHelper();
    var userHelper = new UserRolesHelper();



}


<div class="content">
    <!--START TITLE-->
    <div class="row" style="text-align: center">
        <div class="col-lg-12 mb-lg-3">
            <h2>Project Name: "@Html.DisplayFor(model => model.Name)"</h2>
        </div>
    </div>
    <!--END TITLE-->
    <!--START FIRST ROW-->
    <div class="row">
        <div class="col-lg-5">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card card-stats">
                        <div class="card-body ">
                            <div class="row">
                                <div class="col-5 col-md-4">
                                    <div class="icon-big text-center icon-warning">
                                        <i class="nc-icon nc-book-bookmark text-warning"></i>
                                    </div>
                                </div>
                                <div class="col-7 col-md-8">
                                    <div class="numbers">
                                        <p class="card-category">PEOPLE ON PROJECT</p>
                                        <p class="card-title">
                                            @if (Model.Users.Count() == 0)
                                            {
                                                <p>0</p>
                                            }
                                            else
                                            {
                                                <p>@Model.Users.Count()</p>
                                            }

                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer ">
                            <hr>

                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card card-stats">
                        <div class="card-body ">
                            <div class="row">
                                <div class="col-5 col-md-4">
                                    <div class="icon-big text-center icon-warning">
                                        <i class="nc-icon nc-paper text-success"></i>
                                    </div>
                                </div>
                                <div class="col-7 col-md-8">
                                    <div class="numbers">
                                        <p class="card-category">TICKETS ON PROJECT</p>
                                        <p class="card-title">
                                            @if (Model.Tickets.Count() == 0)
                                            {
                                               <p>0</p>
                                            }
                                            else
                                            {
                                                <p>@Model.Tickets.Count()</p>
                                            }

                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer ">
                            <hr>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-7">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 style="text-align: center"> "@Html.DisplayFor(model => model.Name)", project description</h5>
                            <hr />
                            <p style="padding: 10px 10px">  @Html.DisplayFor(model => model.Description) </p>
                        </div>

                    </div>

                </div>

            </div>
        </div>
    </div>
    <!--END FIRST ROW-->
    <!--START SECOND ROW-->
    <div class="row">
        <div class="col-lg-6">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Users on project</h4>
                        </div>
                        <div class="card-body">
                            <div class="toolbar">
                                <!--        Here you can write extra buttons/actions for the toolbar              -->
                            </div>
                            <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Avatar</th>
                                        <th>Name</th>
                                        <th>Role</th>
                                        <th>Remove</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Avatar</th>
                                        <th>Name</th>
                                        <th>Role</th>
                                        <th>Remove</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @foreach(var item in Model.Users)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(m => item.AvatarPath)</td>
                                            <td>@Html.DisplayFor(m => item.FName) @Html.DisplayFor(m => item.LName)</td>
                                            <td>@Html.DisplayFor(m => item.Roles)</td>
                                            <td>
                                                <a href="" class="btn btn-danger btn-link btn-icon btn-sm remove"><i class="fa fa-times"></i></a>
                                            </td>
                                        </tr>
                                    }                                  

                                </tbody>
                            </table>
                        </div>
                        <!-- end content-->
                    </div>
                    <!--  end card  -->
                </div>
                <!-- end col-md-12 -->
            </div>
        </div>
        <div class="col-lg-6">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Tickets on project</h4>
                        </div>
                        <div class="card-body">
                            <div class="toolbar">
                                <!--        Here you can write extra buttons/actions for the toolbar              -->
                            </div>
                            <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>NAME</th>
                                        <th>PRIORITY</th>
                                        <th>TYPE</th>
                                        <th>STATUS</th>
                                        <th>DETAILS</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>NAME</th>
                                        <th>PRIORITY</th>
                                        <th>TYPE</th>
                                        <th>STATUS</th>
                                        <th>DETAILS</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    <tr>
                                        <td>Tiger Nixon</td>
                                        <td>System Architect</td>
                                        <td>Edinburgh</td>
                                        <td>61</td>
                                        <td class="text-right">
                                            <a href="#" class="btn btn-info btn-link btn-icon btn-sm like"><i class="fa fa-heart"></i></a>
                                            <a href="#" class="btn btn-warning btn-link btn-icon btn-sm edit"><i class="fa fa-edit"></i></a>
                                            <a href="#" class="btn btn-danger btn-link btn-icon btn-sm remove"><i class="fa fa-times"></i></a>
                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                        <!-- end content-->
                    </div>
                    <!--  end card  -->
                </div>
                <!-- end col-md-12 -->
            </div>
        </div>
    </div>
    <!--END SECOND START-->




</div>









