@model IEnumerable<rhBugTracker.Models.Tickets>

@{
    ViewBag.Title = "Index";
}


<div class="content">

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">ALL TICKETS</h4>
                </div>
                <div class="card-body">
                    <div class="toolbar">
                        <!--        Here you can write extra buttons/actions for the toolbar              -->
                    </div>
                    <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>CREATED BY</th>
                                <th>TICKET NAME</th>
                                <th>TICKET DESCRIPTION</th>
                                <th>PRIORITY</th>
                                <th>STATUS</th>
                                <th>REQUEST</th>
                                <th>TICKET PROJECT</th>
                                <th>CREATED ON</th>
                                <th>ACTIONS</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>CREATED BY</th>
                                <th>TICKET NAME</th>
                                <th>TICKET DESCRIPTION</th>
                                <th>PRIORITY</th>
                                <th>STATUS</th>
                                <th>REQUEST</th>
                                <th>TICKET PROJECT</th>
                                <th>CREATED ON</th>
                                <th>ACTIONS</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.OwnerUser.FName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Description)</td>

                                    @if (item.TicketPriority.Name == "None")
                                    {
                                        <td><span class="btn-sm btn-success">@Html.DisplayFor(modelItem => item.TicketPriority.Name)</span></td>
                                    }
                                    else if (item.TicketPriority.Name == "Low")
                                    {
                                        <td><span class="btn-sm btn-success">@Html.DisplayFor(modelItem => item.TicketPriority.Name)</span></td>
                                    }
                                    else if (item.TicketPriority.Name == "Medium")
                                    {
                                        <td><span class="btn-sm btn-warning">@Html.DisplayFor(modelItem => item.TicketPriority.Name)</span></td>
                                    }
                                    else if (item.TicketPriority.Name == "High")
                                    {
                                        <td><span class="btn-sm btn-warning">@Html.DisplayFor(modelItem => item.TicketPriority.Name)</span></td>
                                    }
                                    else if (item.TicketPriority.Name == "Highest")
                                    {
                                        <td><span class="btn-sm btn-danger">@Html.DisplayFor(modelItem => item.TicketPriority.Name)</span></td>
                                    }
                                    else if (item.TicketPriority.Name == "Immediate")
                                    {
                                        <td><span class="btn-sm btn-danger">@Html.DisplayFor(modelItem => item.TicketPriority.Name)</span></td>
                                    }

                                    @if (item.TicketStatus.Name == "Open")
                                    {
                                        <td>
                                            <div class="progress" style="height: 8px;">
                                                <div class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                            Open!
                                        </td>
                                    }
                                    else if (item.TicketStatus.Name == "Assigned")
                                    {
                                        <td>
                                            <div class="progress" style="height: 8px;">
                                                <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                            Assigned!
                                        </td>
                                    }
                                    else if (item.TicketStatus.Name == "In Progress")
                                    {
                                        <td>
                                            <div class="progress" style="height: 8px;">
                                                <div class="progress-bar" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                            In Progress!
                                        </td>
                                    }
                                    else if (item.TicketStatus.Name == "Resolved")
                                    {
                                        <td>
                                            <div class="progress" style="height: 8px;">
                                                <div class="progress-bar" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                            Resolved!
                                        </td>
                                    }
                                    else if (item.TicketStatus.Name == "Archived")
                                    {
                                        <td>
                                            <div class="progress" style="height: 8px;">
                                                <div class="progress-bar bg-success" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                            Archived!
                                        </td>
                                    }

                                    <td>@Html.DisplayFor(modelItem => item.TicketType.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Project.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Created)</td>
                                    <td>
                                        <ul class="d-flex justify-content-center">
                                            <a href="@Url.Action("Edit", "Tickets", new { id=item.Id })" class="btn btn-warning btn-link btn-icon btn-sm edit"><i class="fa fa-edit"></i></a>
                                            <a href="@Url.Action("Details", "Tickets", new { id=item.Id })" class="btn btn-info btn-link btn-icon btn-sm info"><i class="fa fa-info"></i></a>
                                            <a href="@Url.Action("Delete", "Tickets", new { id=item.Id })" class="btn btn-danger btn-link btn-icon btn-sm delete"><i class="fa fa-times"></i></a>
                                        </ul>
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <!-- end content-->
            </div>
            <!--  end card  -->
        </div>
        <!-- end col-md-12 -->
    </div>
    <!-- end row -->

</div>


@section scripts{
    <script>
        $('#datatable').DataTable();
    </script>
}